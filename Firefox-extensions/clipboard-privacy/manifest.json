{
  "manifest_version": 2,
  "name": "Clipboard Manager",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],  // Restrict this to specific sites in practice
    "js": ["content.js"]
  }],
  "icons": {
    "48": "icons/icon.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.png"
  }
}
